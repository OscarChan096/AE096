<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/ncontrol_info_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No. Control"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:drawableStart="@drawable/control"
            android:drawablePadding="15dp"
            android:maxLength="50"
            android:background="@android:drawable/edit_text"
            android:drawableLeft="@drawable/control" />

        <EditText
            android:id="@+id/nombre_info_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:drawableStart="@drawable/user"
            android:drawablePadding="15dp"
            android:maxLength="50"
            android:background="@android:drawable/edit_text"
            android:drawableLeft="@drawable/user" />

        <EditText
            android:id="@+id/escuela_info_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escuela"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:drawableStart="@drawable/school"
            android:drawablePadding="15dp"
            android:maxLength="50"
            android:background="@android:drawable/edit_text"
            android:drawableLeft="@drawable/school" />

        <EditText
            android:id="@+id/especialidad_info_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Especialidad"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:drawableStart="@drawable/esp"
            android:drawablePadding="15dp"
            android:maxLength="50"
            android:background="@android:drawable/edit_text"
            android:drawableLeft="@drawable/esp" />

        <EditText
            android:id="@+id/numtel_info_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefono"
            android:inputType="phone"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:drawableStart="@drawable/phone"
            android:drawablePadding="15dp"
            android:maxLength="50"
            android:background="@android:drawable/edit_text"
            android:drawableLeft="@drawable/phone" />

        <Button
            android:id="@+id/btn_info_user"
            android:drawableStart="@drawable/ic_select"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:text="Guardar"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/boton_redondo"
            android:drawableLeft="@drawable/ic_select" />

    </LinearLayout>

</ScrollView>